# DeployGuard Configuration

# Application
APP_NAME=DeployGuard
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Database
DATABASE_URL=sqlite:///./deployguard.db
# For PostgreSQL: postgresql://user:password@localhost:5432/deployguard
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (optional - for background tasks)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ENCRYPTION_KEY=change-this-to-a-32-byte-base64-encoded-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# GitHub Configuration
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY_PATH=

# BitBucket Configuration
BITBUCKET_CLIENT_ID=
BITBUCKET_CLIENT_SECRET=
BITBUCKET_WORKSPACE=

# GitLab Configuration (future)
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=

# Storage
TEMP_DIR=/tmp/deployguard
MAX_REPO_SIZE_MB=5000
CLONE_TIMEOUT_SECONDS=300

# Scanning Configuration
MAX_SCAN_DEPTH=1000
MAX_PARALLEL_SCANS=5
ENABLE_ENTROPY_DETECTION=true
MIN_ENTROPY_THRESHOLD=4.5

# Cleanup Configuration
ENABLE_GIT_FILTER_REPO=true
BACKUP_BEFORE_CLEANUP=true
MAX_CLEANUP_RETRIES=3

# Email (optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@deployguard.net

# Webhook Configuration
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT_SECONDS=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Monitoring
ENABLE_METRICS=false
SENTRY_DSN=
